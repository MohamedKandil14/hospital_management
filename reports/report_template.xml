<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Patient Report Action -->
    <record id="action_report_patient_card" model="ir.actions.report">
        <field name="name">Patient Card</field>
        <field name="model">hospital.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hospital_management.report_patient_card</field>
        <field name="report_file">hospital_management.report_patient_card</field>
        <field name="binding_model_id" ref="model_hospital_patient"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Doctor Report Action -->
    <record id="action_report_doctor_profile" model="ir.actions.report">
        <field name="name">Doctor Profile</field>
        <field name="model">hospital.doctor</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hospital_management.report_doctor_profile</field>
        <field name="report_file">hospital_management.report_doctor_profile</field>
        <field name="binding_model_id" ref="model_hospital_doctor"/>
        <field name="binding_type">report</field>
    </record>
</odoo>