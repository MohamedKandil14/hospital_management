<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron Job: Send Daily Appointment Reminders -->
    <record id="ir_cron_send_appointment_reminders" model="ir.cron">
        <field name="name">Hospital: Send Appointment Reminders</field>
        <field name="model_id" ref="model_hospital_appointment"/>
        <field name="state">code</field>
        <field name="code">model.send_daily_reminders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>